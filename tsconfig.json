{
    "compilerOptions": {
      "module": "commonjs",
      "target": "ES2021",
      "outDir": "lib",
      "lib": [
          "ES2021",
          "dom" // Required for console.log()
      ],
      "allowJs": false,
      "sourceMap": false,
      "inlineSourceMap": true,
      "inlineSources": true,
      "noImplicitAny": false,
      "noImplicitThis": true,
      "strictNullChecks": true, 
      "strictFunctionTypes": true,
      "strictBindCallApply": true,
      "alwaysStrict": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": [
        "./src/"
    ],
    "exclude": [
        "node_modules"
    ]
  }